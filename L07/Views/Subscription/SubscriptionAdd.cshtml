
@{
   ViewData["Title"] = "SubcriptionAdd";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
   <title>Be Social - Subscription Add</title>
   <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
   <script src="~/lib/jquery/jquery.min.js"></script>
   <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
   @await Html.PartialAsync("SocNavBar")

   <div class="container">
      <form method="post"
            action="/Subscription/SubscriptionAddPost">

         <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
               <h2>New Subscription</h2>
            </div>
         </div>

         <div class="form-group row">
            <label class="control-label col-sm-3" for="prov">Provider  :</label>
            <div class="col-sm-6">
               <select class="form-control dropdown" name="provider" id="prov">
                  <option class="col-sm-3" value="">-- SELECT --</option>
                  @foreach (DataRow row in (DataRowCollection)ViewData["Providers"])
                  {
                     <option value="@row["provider_id"]">@row["name"]</option>
                  }
               </select>
            </div>
         </div>

         <div class="form-group row">
            <label class="control-label col-sm-3" for="subr">Subscriber :</label>
            <div class="col-sm-6">
               <select class="form-control dropdown" name="subscriber" id="subr">
                  <option class="col-sm-3" value="">-- SELECT --</option>
                  @foreach (DataRow row in (DataRowCollection)ViewData["Subscribers"])
                  {
                     <option value="@row["subscriber_id"]">
                        @row["username"].ToString().ToUpper()
                        @row["family_name"]
                        @row["first_name"]
                     </option>
                  }
               </select>
            </div>
         </div>

         <div class="form-group row">
            <label for="ds" class="control-label col-sm-3">Date Subscribed : </label>
            <div class="col-sm-3">
               <input type="text" id="ds" name="datesub" class="form-control"
                      placeholder="YYYY-MM-DD" />
            </div>
         </div>

         <div class="form-group row">
            <div class="offset-sm-3 col-sm-8">
               <input type="submit" class="btn btn-light" value="Create" />
            </div>
         </div>


         @if (ViewData["Message"] != null)
         {
            <div class="form-group row">
               <div class="offset-sm-3 col-sm-6">
                  <div class="alert alert-@ViewData["MsgType"]">
                     <text>@ViewData["Message"]</text>
                  </div>
               </div>
            </div>
         }

      </form>
   </div>
</body>
</html>