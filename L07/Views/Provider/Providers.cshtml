
@model DataRowCollection
<!DOCTYPE html>
<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title>Be Social - Providers</title>
   <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
   <script src="~/lib/jquery/jquery.min.js"></script>
   <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
   <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
   <link href="~/lib/font-awesome/css/brands.min.css" rel="stylesheet" />
   <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
</head>
<body>
   @await Html.PartialAsync("SocNavBar")

   <div class="container">
      <h3>All Providers</h3>

      @if (TempData["Message"] != null)
      {
         <div class="alert alert-@TempData["MsgType"]">
            @TempData["Message"]
         </div>
      }

      @if (Model != null)
      {
         <table class='table table-striped table-hover'>
            <tr>
               <th>ID</th>
               <th>Name</th>
               <th>Action</th>
            </tr>

            @foreach (DataRow row in Model)
            {
               <tr>
                  <td>@row["provider_id"]</td>
                  <td>@row["name"]</td>

                  <td>
                     <a href="/Provider/ProviderEdit/@row["provider_id"]">
                        Edit
                     </a>
                     |
                     <a href="/Provider/ProviderDelete/@row["provider_id"]"
                        onclick="return confirm('Delete Provider [@row["name"]]')">
                        Delete
                     </a>
                  </td>
               </tr>
            }
         </table>
      }
      else
      {
         <p class="alert alert-danger">No Providers found.</p>
      }
   </div>

</body>
</html>
