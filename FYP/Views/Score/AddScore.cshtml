@model Score;

@section MoreScripts {
   <script src="~/lib/moment/moment.min.js"></script>
   <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
   <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
}

<form asp-controller="Score"
      asp-action="AddScore"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Add Test Score</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="StudentName">Student Name:</label>
        <div class="col-sm-5">
            <input asp-for="StudentName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="StudentName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="TestScore">Test Score:</label>
        <div class="col-sm-2">
            <input asp-for="TestScore" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="TestScore" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>

