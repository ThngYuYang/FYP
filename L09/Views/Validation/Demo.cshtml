@{
   Layout = "_Layout";
}

@model DemoData

<form asp-controller="Validation" asp-action="Demo"
      method="post" >

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
         <h2>Demo Validation</h2>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="DateFieldA">Date Field A :</label>
      <div class="col-sm-3">
         <input asp-for="DateFieldA" class="form-control" />
      </div>
      <div class="col-sm-3">
         <span asp-validation-for="DateFieldA" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="DateFieldB">Date Field B :</label>
      <div class="col-sm-3">
         <input asp-for="DateFieldB" class="form-control" />
      </div>
      <div class="col-sm-3">
         <span asp-validation-for="DateFieldB" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Teenager">Teenager :</label>
      <div class="col-sm-3">
         <input asp-for="Teenager" class="form-control" />
      </div>
      <div class="col-sm-3">
         <span asp-validation-for="Teenager" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="ProductCode">Product Code :</label>
      <div class="col-sm-3">
         <input asp-for="ProductCode" class="form-control" />
      </div>
      <div class="col-sm-3">
         <span asp-validation-for="ProductCode" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="EmailField">Email Field :</label>
      <div class="col-sm-3">
         <input asp-for="EmailField" class="form-control" />
      </div>
      <div class="col-sm-3">
         <span asp-validation-for="EmailField" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-3">
         <input type="submit" value="Submit" class="btn btn-primary" />
      </div>
   </div>

     <div class="form-group row">
      <div class="offset-sm-2 col-sm-4">
         <div asp-validation-summary="All" class="text-danger"></div>
      </div>
   </div>
   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-3">
            <div class="alert alert-@ViewData["MsgType"]">
               @ViewData["Message"]
            </div>
         </div>
      </div>
   }
</form>
