@model TravelUser;

<form asp-controller="Admin" asp-action="CreateUser"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-5 ">
            Create Travel User
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserId">User ID :</label>
        <div class="col-sm-5">
            <input asp-for="UserId" class="form-control" />
        </div>
        @{
            // TODO: L09 Task 4a - Validation Message for UserId
        }
        <div class="col-sm-4">
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="FullName">Full Name :</label>
        <div class="col-sm-5">
            <input asp-for="FullName" class="form-control" />
        </div>
        @{
            // TODO: L09 Task 4b - Validation Message for FullName
        }
        <div class="col-sm-4">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Email">Email :</label>
        <div class="col-sm-5">
            <input asp-for="Email" class="form-control" />
        </div>
        @{
            // TODO: L09 Task 4c - Validation Message for Email
        }
        <div class="col-sm-4">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Dob">Birth Date :</label>
        <div class="col-sm-5">
            <input asp-for="Dob" asp-format="{0:yyyy-MM-dd}"
                   class="form-control" placeholder="YYYY-MM-DD" />
        </div>
        @{
            // TODO: L09 Task 4d - Validation Message for Dob
        }
        <div class="col-sm-4">
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserPw">Password :</label>
        <div class="col-sm-5">
            <input asp-for="UserPw" class="form-control" />
        </div>
        @{
            // TODO: L09 Task 4e - Validation Message for UserPw
        }
        <div class="col-sm-4">
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserPw2">Confirm Password :</label>
        <div class="col-sm-5">
            <input asp-for="UserPw2" class="form-control" />
        </div>
        @{
            // TODO: L09 Task 4f - Validation Message for UserPw2
        }
        <div class="col-sm-4">
            <span asp-validation-for="UserPw2" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2">User Role : </label>
        <div class="col-sm-5">
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" id="rb1"
                       asp-for="UserRole" value="user" checked />
                <label class="form-check-label" for="rb1">User</label>

            </div>
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" id="rb2"
                       asp-for="UserRole" value="admin" />
                <label class="form-check-label" for="rb2">Admin</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @Html.Raw(ViewData["Message"])
                </div>
            </div>
        </div>
    }
    <div class="form-group row">
        <div class="offset-sm-4 col-sm-6">
            <img src="~/images/www.jpg" />
            <footer>
                &copy;<em id="date"></em>Where We Were
            </footer>
        </div>
    </div>
</form>
