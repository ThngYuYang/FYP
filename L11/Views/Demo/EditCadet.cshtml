    @{
   Layout = "_Layout";
}

@model Cadet;

<form asp-controller="Demo"
      asp-action="EditCadet"
      method="post" >

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6 ">
         <h2>Edit Cadet</h2>
      </div>
   </div>

   <input asp-for="CNo" hidden />

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="CName">Cadet Name :</label>
      <div class="col-sm-5">
         <input asp-for="CName" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="CName" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="ClassGrp">Class Group :</label>
      <div class="col-sm-5">
         <input asp-for="ClassGrp" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="ClassGrp" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Shooting">Shooting :</label>
      <div class="col-sm-3">
         <input asp-for="Shooting" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Shooting" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Fitness">Fitness :</label>
      <div class="col-sm-3">
         <input asp-for="Fitness" type="text" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Fitness" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Exam">Exam :</label>
      <div class="col-sm-3">
         <input asp-for="Exam" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Exam" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">
         <input type="submit" value="Submit" class="btn btn-primary" />
      </div>
   </div>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               ViewData["Message"]
            </div>
         </div>
      </div>
   }



</form>
