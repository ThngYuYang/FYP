@{
    Layout = "_Layout";
}

@model Warehouse;
<form asp-controller="Warehouse"
      asp-action="Update"
      method="post">

    <br />
    <h1>Edit Warehouse Alias</h1>
    <br />
    <hl></hl>

    <input asp-for="Id" hidden="hidden" />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Alias">Alias :</label>
        <div class="col-sm-5">
            <input asp-for="Alias" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Alias" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</form>
