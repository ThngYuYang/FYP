<!DOCTYPE html>
<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title>BookWorm - Add Publisher</title>
   <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
   <script src="~/lib/jquery/jquery.min.js"></script>
   <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
   @await Html.PartialAsync("BwNavBar")

   <div class="container">
      <form method="post" action="/BookWorm/PubAddPost">
         <div class="offset-sm-2 col-sm-10">
            <h3>Add New Publisher</h3>
         </div>

         <div class="form-group row">
            <label for="pubid" class="control-label col-sm-2">Pub ID :</label>
            <div class="col-sm-5">
               <input type="text" id="pubid" name="pubid" class="form-control" />
            </div>
         </div>

         <div class="form-group row">
            <label for="pubname" class="control-label col-sm-2">Pub Name :</label>
            <div class="col-sm-5">
               <input type="text" id="pubname" name="pubname" class="form-control" />
            </div>
         </div>

         <div class="form-group row">
            <label for="pubaddr" class="control-label col-sm-2">Pub Address :</label>
            <div class="col-sm-5">
               <input type="text" id="pubaddr" name="pubaddr" class="form-control" />
            </div>
         </div>

         <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
               <input type="submit" value="Add Publisher" class="btn btn-primary" />
            </div>
         </div>

         @if (ViewData["Message"] != null)
         {
            <div class="form-group row">
               <div class="offset-sm-2 col-sm-10">
                  <div class="alert alert-@ViewData["MsgType"]">
                   @ViewData["Message"]
                  </div>
               </div>
            </div>
         }
      </form>
   </div>
</body>
</html>
