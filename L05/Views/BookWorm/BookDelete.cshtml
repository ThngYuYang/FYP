<!DOCTYPE html>
<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title>Bookworm - Delete Book </title>
   <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
   <script src="~/lib/jquery/jquery.min.js"></script>
   <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
   @await Html.PartialAsync("BwNavBar")

   <div class="container">
      <form method="post" action="/BookWorm/BookDeletePost">
         <div class="offset-sm-2 col-sm-10">
            <h3>Delete Book</h3>
         </div>
         <div class="form-group row">
             <label for="isbn" class="control-label col-sm-2">Isbn :</label>
             <div class="col-sm-4">
                 <input type="text" id="isbn" name="isbn" class="form-control" />
             </div>
             <div class="col-sm-4">
                 <input type="submit" value="Delete" class="btn btn-primary" />
             </div>
         </div>

         @if (ViewData["Message"] != null)
         {
            <div class="form-group row">
               <div class="offset-sm-2 col-sm-10">
                  <div class="alert alert-@ViewData["MsgType"]">
                     @ViewData["Message"]
                  </div>
               </div>
            </div>
         }
      </form>
   </div>

</body>
</html>
