<form asp-controller="Opinion"
      asp-action="Create"
      method="post" >


   <div class="form-group row">
      <div class="offset-sm-1 col-sm-6 ">
         <h2>Create Survey</h2>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-1" asp-for="Question">Qn :</label>
      <div class="col-sm-5">
         <input asp-for="Question" class="form-control" />
         <span asp-validation-for="Question" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-1" asp-for="ChoiceA">A :</label>
      <div class="col-sm-2">
         <input asp-for="ChoiceA" class="form-control" />
         <span asp-validation-for="ChoiceA" class="text-danger"></span>
      </div>
      <label class="control-label col-sm-1" asp-for="ChoiceB">B :</label>
      <div class="col-sm-2">
         <input asp-for="ChoiceB" class="form-control" />
         <span asp-validation-for="ChoiceB" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-1 col-sm-5">
         <input type="submit" value="Survey" class="btn btn-primary" />
      </div>
   </div>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               @ViewData["Message"]
            </div>
         </div>
      </div>
   }


</form>
