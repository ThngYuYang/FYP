@model Rarity

<form asp-controller="Rarity"
      asp-action="Update"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-6"><h2>Modify Rarity Description</h2></div>
    </div>

    <input type="text" asp-for="Id" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-3 text-right" asp-for="Id">Id:</label>
        <div class="col-sm-3">
            <input type="text" asp-for="Id" class="form-control" readonly="readonly" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-3 text-right" asp-for="RarityValue">Rarity Value:</label>
        <div class="col-sm-5">
            <input type="text" asp-for="RarityValue" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-2">
            <input type="submit" value="Update" class="btn btn-primary" /><br />
        </div>
    </div>


    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-4 col-sm-4">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }
</form>

