@model DataRowCollection
<h2>My Dogs</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">@TempData["Message"]</div>
}
<table class="table table-striped table-hover">
    <tr>
        <th>Mint#</th>
        <th>Mint Date</th>
        <th>Weapon</th>
        <th>Armor Color</th>
        <th>For Sale?</th>
        <th style="text-align: right;">Price</th>
        <th>Rarity</th>
        <th>Companion</th>
        <th>Action</th>
    </tr>
    @foreach (DataRow row in Model)
    {
        <tr>
            <td hidden="hidden">@row["DogId"]</td>
            <td>@row["MintNumber"]</td>
            <td>@String.Format("{0:dd-MMM-yyyy}", @row["MintDate"])</td>
            <td>@row["Weapon"]</td>
            <td>@row["ArmorColor"]</td>
            <td>@row["ForSale"]</td>
            <td align="right">@String.Format("{0:C}", row["Price"])</td>
            <td>@row["RarityValue"]</td>
            <td>@row["Companion"]</td>
            <td>
                <a asp-controller="Dog" asp-action="Update" asp-route-id="@row["DogId"]">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>


