@model Dog

<form asp-controller="Dog"
      asp-action="Update"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-4 col-sm-6"><h2>Modify Details</h2></div>
    </div>

    <input type="text" asp-for="Id" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" asp-for="MintNumber">Mint#:</label>
        <div class="col-sm-3">
            <input type="text" asp-for="MintNumber" class="form-control" readonly="readonly" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" asp-for="MintDate">Mint Date:</label>
        <div class="col-sm-3">
            <input type="text" asp-for="MintDate" asp-format="{0:dd-MMM-yyyy}" class="form-control" readonly="readonly" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" for="Weapon">Weapon:</label>
        <div class="col-sm-4">
            <select class="form-control dropdown" name="Weapon" id="Weapon">
                @foreach (DataRow row in (DataRowCollection)ViewData["Weapons"])
                {
                    <option selected="@(row["Weapon"].Equals(@Model.Weapon))">
                        @row["Weapon"]
                    </option>
                }
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" for="ArmorColor">Armor Color:</label>
        <div class="col-sm-4">
            <select class="form-control dropdown" name="ArmorColor" id="ArmorColor">
                @foreach (DataRow row in (DataRowCollection)ViewData["ArmorColors"])
                {
                    <option selected="@(row["ArmorColor"].Equals(@Model.ArmorColor))">
                        @row["ArmorColor"]
                    </option>
                }
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" asp-for="ForSale">For Sale?: </label>
        <div class="col-sm-4">
            <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input"
                       id="ForSale" asp-for="ForSale" value="true" />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" asp-for="Price">Price($):</label>
        <div class="col-sm-3">
            <input type="text" asp-for="Price" asp-format="{0:0.00}" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" asp-for="Accessory">Accessory:</label>
        <div class="col-sm-3">
            <input type="text" asp-for="Accessory" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Accessory" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" asp-for="CallSign">Call Sign:</label>
        <div class="col-sm-3">
            <input type="text" asp-for="CallSign" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="CallSign" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-4 text-right" for="Rarity">Rarity:</label>
        <div class="col-sm-4">
            <input type="text" id="Rarity" class="form-control"
                   readonly="readonly" value="@ViewData["Rarity"]" />
        </div>
    </div>

    @if (Model.Companion is not null)
    {
        <div class="form-group row">
            <label class="control-label col-sm-4 text-right" asp-for="Companion">Companion:</label>
            <div class="col-sm-4">
                <input type="text" asp-for="Companion" class="form-control" readonly="readonly" />
            </div>
        </div>
    }

    <div class="form-group row">
        <div class="offset-sm-4 col-sm-4">
            <input type="submit" value="Update" class="btn btn-primary" /><br />
        </div>
    </div>


    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-4 col-sm-4">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }
</form>

