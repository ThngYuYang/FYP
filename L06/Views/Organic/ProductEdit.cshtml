@model OrgProduct
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
   <title>Organic Fruits - Subscription</title>
   <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
   <script src="~/lib/jquery/jquery.min.js"></script>
   <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
   @await Html.PartialAsync("OrgNavBar")

   <div class="container">
      <form method="post"
            action="/Organic/ProductEditPost">

         <div class="form-group row">
            <div class="offset-sm-2 col-sm-5">
               <h2>Update Product</h2>
            </div>
         </div>

         <div class="form-group row">
            <label for="pcode" class="control-label col-sm-2">Product Code : </label>
            <div class="col-sm-5">
               <input type="text" id="pcode" name="pcode" class="form-control"
                      value="@Model.OrgCode" readonly />
            </div>
         </div>

         <div class="form-group row">
            <label for="pdesc" class="control-label col-sm-2">Description : </label>
            <div class="col-sm-5">
               <input type="text" id="pdesc" name="pdesc" class="form-control"
                      value="@Model.OrgDesc" />
            </div>
         </div>

         <div class="form-group row">
            <label for="price" class="control-label col-sm-2">Price : </label>
            <div class="col-sm-5">
               <input type="text" id="price" name="price" class="form-control"
                      value="@String.Format("{0:0.00}", Model.Price)" />
            </div>
         </div>

         <div class="form-group row">
            <label for="weight" class="control-label col-sm-2">Weight : </label>
            <div class="col-sm-5">
               <input type="text" id="weight" name="weight" class="form-control"
                      value="@Model.Gram" />
            </div>
         </div>

         <div class="form-group row">
            <label for="country" class="control-label col-sm-2">Country : </label>
            <div class="col-sm-5">
               <input type="text" id="country" name="country" class="form-control"
                      value="@Model.Country" />
            </div>
         </div>

         <div class="form-group row">
            <div class="col-sm-5 offset-sm-2">
               @if (ViewData["Message"] != null)
               {
                  <div class="alert alert-warning">
                     @ViewData["Message"]
                  </div>
               }
            </div>
         </div>

         <div class="form-group row">
            <div class="offset-sm-2 col-sm-5">
               <input type="submit" class="btn btn-primary" value="Update" />
            </div>
         </div>

      </form>
   </div>
</body>
</html>

