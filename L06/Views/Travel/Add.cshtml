<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Trip Highlight</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    @await Html.PartialAsync("TravelMenu");

    <div class="container">
        @{
            // TODO: L06 Task 4a - Fill in the Attributes for the FORM element
        }
        <form method="post"
              action="/Travel/AddPost"
              enctype="multipart/form-data">

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-6">
                    <h2>Add Trip Highlight</h2>
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="Title">Title :</label>
                <div class="col-sm-6">
                    <input type="text" name="Title" id="Title" class="form-control" />
                </div>
            </div>

            @{
                // TODO: L06 Task 4b - Add Form Group for City:
            }

            <div class="form-group row">
                <label for="City" class="control-label col-sm-2">City : </label>
                <div class="col-sm-6">
                    <input type="text" id="City" name="City" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="TripDate">Trip Date :</label>
                <div class="col-sm-6">
                    <input type="text" name="TripDate" id="TripDate" class="form-control"
                           placeholder="YYYY-MM-DD" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="Duration">Length (in Days) :</label>
                <div class="col-sm-6">
                    <input type="text" name="Duration" id="Duration" class="form-control" />
                </div>
            </div>

            @{
                // TODO: L06 Task 4c - Add Form Group for Total Cost :
            }
            <div class="form-group row">
                <label for="Spending" class="control-label col-sm-2">Total Cost : </label>
                <div class="col-sm-6">
                    <input type="text" id="Spending" name="Spending" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="Story">Detailed Story :</label>
                <div class="col-sm-6">
                    <textarea name="Story" rows="8" cols="20" id="Story"
                              class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="Photo">Photo :</label>
                <div class="col-sm-6">
                    <input type="file" name="Photo" id="Photo" class="form-control-file" />
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-6">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>

            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-6">
                        <div class="alert alert-@ViewData["MsgType"]">
                            <text>@Html.Raw(ViewData["Message"])</text>
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>

</body>
</html>
