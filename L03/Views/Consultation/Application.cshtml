<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Provide Consultation</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">

        <form action="/Consultation/Confirm" method="post">
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-4">
                    <h2>Be a Consultant</h2>
                </div>
            </div>

            <div class="form-group row">
                <label for="StaffName" class="control-label col-sm-2">Staff Name :</label>
                <div class="col-sm-4">
                    <input type="text" name="StaffName" id="StaffName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label for="Email" class="control-label col-sm-2">Email ID :</label>
                <div class="col-sm-4">
                    <input type="text" name="Email" id="Email" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label for="AcadPosition" class="control-label col-sm-2">Position :</label>
                <div class="col-sm-2">
                    <select name="AcadPosition" id="AcadPosition" class="form-control">
                        <option value="">-- SELECT --</option>
                        <option value="Professor">Professor</option>
                        <option value="Lecturer">Lecturer</option>
                        <option value="Adjunct">Adjunct</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="StartDate" class="control-label col-sm-2">Start Date :</label>
                <div class="col-sm-2">
                    <input type="text" name="StartDate" id="StartDate"
                           placeholder="YYYY-MM-DD" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label for="EndDate" class="control-label col-sm-2">End Date :</label>
                <div class="col-sm-2">
                    <input type="text" name="EndDate" id="EndDate"
                           placeholder="YYYY-MM-DD" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-4">
                    <div class="form-check">
                        <input type="checkbox" name="Agree" id="Agree" value="yes" class="form-check-input" />
                        <label for="Agree" class="form-check-label">
                            I agree to the Terms and Conditions
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-4">
                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </div>

            <div>
                <div>
                    @ViewData["Message"]
                </div>
            </div>
        </form>
    </div>
</body>
</html>
