@model Performance;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
      @{
      // TODO: L10 Task 5b - Write Javascript to activate DateTimePicker
      }
      $(document).ready(function () {
          // Write Javascript to activate DateTimePicker
          $('#JSPerformDT').datetimepicker({
              format: 'YYYY-MM-DD HH:mm',
              defaultDate: ' @DateTime.Today.AddDays(14).ToString("yyyy-MM-dd")',
              sidebyside: true
          });
      });
    </script>
}

<form asp-controller="Performance"
      asp-action="Create"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Create Performance Record</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Title">Title :</label>
        <div class="col-sm-5">
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Artist">Artist :</label>
        <div class="col-sm-5">
            <input asp-for="Artist" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>
    </div>

    @{
        // TODO: L10 Task 5a - Use Date Time Picker to select Date and Time
    }
    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PerformDT">Date :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSPerformDT" data-target-input="nearest">
                <input type="text" asp-for="PerformDT" class="form-control" />
                <div class="input-group-append" data-target="#JSPerformDT" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PerformDT" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Duration">Duration :</label>
        <div class="col-sm-3">
            <input asp-for="Duration" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Price">Price :</label>
        <div class="col-sm-3">
            <input asp-for="Price" type="text" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Chamber">Chamber :</label>
        <div class="col-sm-3">
            <input asp-for="Chamber" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Chamber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
