@model Movie;

@section MoreScripts {
   <script src="~/lib/moment/moment.min.js"></script>
   <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
   <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

   <script language="javascript">
      $(document).ready(function () {
         $('#JSReleaseDT')
            .datetimepicker({
               format: 'YYYY-MM-DD',
            });
      });
   </script>
}

<form asp-controller="Movie"
      asp-action="AddMovie"
      method="post">

   <div class="form-group row">
      <div class="offset-sm-0 col-sm-6 ">
         <h2>Add Movie</h2>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Title">Title :</label>
      <div class="col-sm-5">
         <input asp-for="Title" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Title" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="ReleaseDate">Date :</label>
      <div class="col-sm-3">
         <div class="input-group date" id="JSReleaseDT" data-target-input="nearest">
            <input type="text" class="form-control"
                   asp-for="ReleaseDate"
                   asp-format="{0:yyyy-MM-dd}" />
            <div class="input-group-append" data-target="#JSReleaseDT" data-toggle="datetimepicker">
               <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
         </div>
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="ReleaseDate" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Price">Price :</label>
      <div class="col-sm-2">
         <input asp-for="Price" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Price" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Duration">Duration :</label>
      <div class="col-sm-2">
         <input asp-for="Duration" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Duration" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Rating">Rating :</label>
      <div class="col-sm-2">
         <input asp-for="Rating" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Rating" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="GenreId">Genre :</label>
      <div class="col-sm-3">
         <select class="form-control dropdown" asp-for="GenreId"
                 asp-items="@ViewData["Genres"] as SelectList">
            <option value="">Please Select Genre</option>
         </select>
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">
         <input type="submit" value="Submit" class="btn btn-primary" />
      </div>
   </div>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@Html.Raw(ViewData["Message"])</text>
            </div>
         </div>
      </div>
   }

</form>

